i
    cursor: pointer
.hidden
    display: none

label.error
    color: #c7254e
    background: #f9f2f4

#car-map
    height: 400px
    border: 1px solid black
    background: grey

.header
    font-size: 40px
    font-family: verdana
    height: 50px
    line-height: 50px
    vertical-align: 50px
    font-style: italic
    color: grey

.dispetcher-form
    margin-top: 15px

.admin-form
    margin: 10px 0

.create-order
    cursor: pointer

.table tr
    cursor: pointer

.admin__buttons-submit
    float: right
    margin-right: 235px

#car-map img, #map img
    max-width: none

.triangle-button
    width: 0px;
    height: 0px;
    border-style: solid;
    border-width: 20px 20px 20px 0;
    border-color: transparent #8b9196 transparent transparent;
.order-table
    font-size: 11px
.admin-tools
    float: right
    button
        display: block
        margin: 5px 20px

#user-orders #orders
    margin-top: 20px

#orders
    color: #333
    float: left
    table
        .selected
            td
                background: #77C7DB

        width: 700px
        td
            white-space: nowrap
            overflow: hidden
        .title
            max-width: 150px
        .small
            max-width: 20px
        .phone
            max-width: 40px
        .mini
            max-width: 5px
        .tools
            max-width: 5px


#cars
    table
        .selected
            td
                background: #77C7DB
        .hovered
            td
                background: #77C7DB
        .grey
            td
                background: #777

    width: 180px
    float: right

#map
    box-shadow: 3px 3px 15px rgba(0, 0, 0,0.5)
.calculated-price
    font-weight: bolder
.order-car
    margin-top: 20px;

footer
    background: #FFF156
    padding: 5px 0;
    .social-nav
        margin: 0
        list-style: none
        text-align: center

        .social-link
            display: inline-block
            margin-left: 40px

            &:first-child
                margin-left: 0

            a img
                width: 60px
                height: 60px

body
    color: white
    background: #504F4F

legend
    color: white

.navbar-inner
    background: #FFF156
    border-radius: 0

.table tbody tr:hover
    color: #333
.table tbody tr.success
    color: #333